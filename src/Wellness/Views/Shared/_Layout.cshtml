<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8"/>

    <link href="data:image/x-icon," rel="icon" type="image/x-icon" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/dist/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/angular-xeditable/dist/css/xeditable.min.css" />
    <link rel="stylesheet" href="~/lib/angular-chart.js/dist/angular-chart.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a asp-controller="App" asp-action="Index" class="btn btn-lg">
                            <span class="text-danger"><i class="fa fa-heart"></i> Wellness</span>
                        </a>
                    </li>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a asp-controller="App" asp-action="Self" class="btn btn-lg btn-info">
                                <i class="fa fa-user"></i> Personal
                            </a>
                        </li>
                        <li>
                            <a asp-controller="App" asp-action="Team" class="btn btn-lg btn-info">
                                <i class="fa fa-users"></i> Teams
                            </a>
                        </li>
                        <li>
                            <a asp-controller="App" asp-action="Workouts" class="btn btn-lg btn-info">
                                <i class="fa fa-calendar"></i> Workouts
                            </a>
                        </li>
                        <li>
                            <a asp-controller="App" asp-action="Excercises" class="btn btn-lg btn-info">
                                <i class="fa fa-trophy"></i> Excercises
                            </a>
                        </li>
                        <li>
                            <a asp-controller="App" asp-action="Events" class="btn btn-lg btn-info">
                                <i class="fa fa-birthday-cake"></i> Events
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Auth" asp-action="Logout" class="btn btn-lg btn-danger">
                                <i class="fa fa-sign-out"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-lg btn-info">
                                <i class="fa fa-sign-in"></i> Login
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Auth" asp-action="Register" class="btn btn-lg btn-info">
                                <i class="fa fa-user-plus"></i> Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <div class="container-fluid">
            @RenderBody()
        </div>
        <br />
        <br />
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom"><h4 class="text-center">All Users Total Weight Loss: 10 Lbs</h4></div>
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>


    @RenderSection("Scripts", false)

</body>
</html>